<?xml version="1.0"?>

<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/springbot/queue/process" method="GET">
        <service class="Springbot\Queue\Api\JobsInterface" method="process"/>
        <resources>
            <resource ref="Springbot_Queue::jobs"/>
        </resources>
    </route>

    <route url="/V1/springbot/queue/jobs/delete/:jobId" method="POST">
        <service class="Springbot\Queue\Api\JobsInterface" method="deleteJob"/>
        <resources>
            <resource ref="Springbot_Queue::jobs"/>
        </resources>
    </route>

    <route url="/V1/springbot/queue/jobs/clear" method="POST">
        <service class="Springbot\Queue\Api\JobsInterface" method="clearJobs"/>
        <resources>
            <resource ref="Springbot_Queue::jobs"/>
        </resources>
    </route>

    <route url="/V1/springbot/queue/jobs" method="GET">
        <service class="Springbot\Queue\Api\JobsInterface" method="viewJobs"/>
        <resources>
            <resource ref="Springbot_Queue::jobs"/>
        </resources>
    </route>
	
	<route url="/V2/springbot/queue/process" method="GET">
        <service class="Springbot\Queue\Api\JobsInterface" method="process"/>
        <resources>
            <resource ref="Springbot_Queue::jobs"/>
        </resources>
    </route>

    <route url="/V2/springbot/queue/jobs/delete/:jobId" method="POST">
        <service class="Springbot\Queue\Api\JobsInterface" method="deleteJob"/>
        <resources>
            <resource ref="Springbot_Queue::jobs"/>
        </resources>
    </route>

    <route url="/V2/springbot/queue/jobs/clear" method="POST">
        <service class="Springbot\Queue\Api\JobsInterface" method="clearJobs"/>
        <resources>
            <resource ref="Springbot_Queue::jobs"/>
        </resources>
    </route>

    <route url="/V2/springbot/queue/jobs" method="GET">
        <service class="Springbot\Queue\Api\JobsInterface" method="viewJobs"/>
        <resources>
            <resource ref="Springbot_Queue::jobs"/>
        </resources>
    </route>
</routes>
